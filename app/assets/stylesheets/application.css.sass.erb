h1#logo
  padding-top: 40px
  font-size: 3em
  a
    color: #fff
    &:hover
      border-bottom: none


a.favorited, a.unfavorited
  border-bottom: none
  border-left: 2px solid $c-text-invert
  color: #fff 
  display: block 
  height: 101%
  line-height: 2.5em
  margin-left: 2.5em
  position: relative
  text-align: center
  text-decoration: none
  top: -2.6em
  width: 2.5em
  z-index: 1000
  &:hover
    border-bottom: none
    cursor: pointer
    text-decoration: none

.artcover
  float: left
  img
    margin: 0 auto

.bpm, .key
  float: right
  text-align: center
  font-size: 1.2em

html
  background: -webkit-linear-gradient(90deg, #232526 10%, #414345 90%) /* Chrome 10+, Saf5.1+ */
  background:    -moz-linear-gradient(90deg, #232526 10%, #414345 90%) /* FF3.6+ */
  background:     -ms-linear-gradient(90deg, #232526 10%, #414345 90%) /* IE10 */
  background:      -o-linear-gradient(90deg, #232526 10%, #414345 90%) /* Opera 11.10+ */
  background:         linear-gradient(90deg, #232526 10%, #414345 90%) /* W3C */

i
  vertical-align: middle

li, ul
  list-style-type: none


li.result
  border-radius: 4px 4px 4px 4px
  -moz-border-radius: 4px 4px 4px 4px
  -webkit-border-radius: 4px 4px 4px 4px
  border: 2px solid $c-text-invert
  color: white
  margin-left: -20px
  &:hover
    cursor: pointer
  &:hover > *
    cursor: text

.pagination
  float: left

@media (max-width: 1019px)
  .artcover
    float: none
    img
      display: block
      margin: 0 auto
.player
  height: 60px

.search-icon
  background: white url(http://i.imgur.com/lFkqn.png) left center no-repeat
  border: 1px solid #ccc
  color: $c-text
  font-size: 2em
  height: 80px
  padding: 8px 0 8px 0
  position: relative
  text-indent: 40px

h1.splash 
  position: absolute
  top: 60px
  width: 210px
  font-size: 4em
  padding: 20px 40px
  background-color: #2e2e2e
  filter: blur(0)
  border-radius: 4px 4px 4px 4px
  -moz-border-radius: 4px 4px 4px 4px
  -webkit-border-radius: 4px 4px 4px 4px

div.signin
  border-radius: 4px 4px 4px 4px
  -moz-border-radius: 4px 4px 4px 4px
  -webkit-border-radius: 4px 4px 4px 4px
  position: absolute
  top: 500px
  width: 105px
  font-size: 1.5em
  padding: 10px 20px
  background-color: #2e2e2e
  filter: blur(0)
  a
    color: #fff
    border-bottom: #fff
@media (max-width: 600px)
  div.signin
    top: 320px
  .sidebar
    text-align: center
    padding: 0

div.desc
  border-radius: 4px 4px 4px 4px
  -moz-border-radius: 4px 4px 4px 4px
  -webkit-border-radius: 4px 4px 4px 4px
  position: absolute
  font-size: 1.5em
  padding: 10px 20px
  background-color: #2e2e2e
  filter: blur(0)
  top: 200px
  p
    margin-bottom: 0

div.splash
  background-image: url("collage.jpg")
  background-size: cover
  display: block
  filter: blur(1px) sepia(40%)
  -webkit-filter: brightness(20%)
  height: 100%
  left: 0
  position: fixed
  right: 0
  z-index: 0

.register
  font-size: .5em
  &:hover
    border-bottom: 1px solid #fff
